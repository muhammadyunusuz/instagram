<%- include('parts/header') %>

<% var error %>

<section class="vh-100 d-flex flex-column justify-content-center align-items-center bdate">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-12">
                <div class="card p-4 text-center d-flex flex-column align-items-center">
                    <img src="/img/bdate.svg" alt="Bdate image" class="w-50 img-fluid bdate-image">
                    <h1 class="h4 mt-4">Add your birthday</h1>
                    <p class="mt-2">This won't be a part of your public profile.</p>
                    <form method="POST">
                        <% if(error) {%>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>
                        <div class="d-flex">
                            <select name="bmonth" class="form-select  m-1">
                                <option value="january">January</option>
                                <option value="february">February</option>
                                <option value="march">March</option>
                                <option value="april">April</option>
                                <option value="may">May</option>
                                <option value="june">June</option>
                                <option value="july">July</option>
                                <option value="august">August</option>
                                <option value="september">September</option>
                                <option value="october">October</option>
                                <option value="november">November</option>
                                <option value="december">December</option>
                            </select>
                            <select name="bday" class="form-select m-1">
                                <% for(let i = 1; i < 32; i++) {%>
                                <option value="<%= i %>"><%= i %></option>
                                <% } %>
                            </select>
                            <select name="byear" class="form-select m-1">
                                <% for(let i = 2017; i > 1930; i--) {%>
                                <option value="<%= i %>"><%= i %></option>
                                <% } %>>
                            </select>
                        </div>
                        <p class="text-muted mt-3">You need to enter the date you were born</p>
                        <p class="text-muted mt-3">Use your own birthday, even if this account is for a business, a pet, or something else</p>
                        <button class="btn btn-primary w-100 mt-3">Next</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-lg-4 col-md-6 col-12">
                <div class="card d-flex text-center p-4 align-items-center">
                    <p class="m-0 p-0">Have an account? <a href="/login">Log in</a></p>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('parts/footer') %>